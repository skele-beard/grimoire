{
  "manifest_version": 2,
  "name": "Grimoire Password Manager",
  "version": "1.0",
  "description": "Secure password manager with browser integration",
  
  "permissions": [
    "nativeMessaging",
    "tabs",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_title": "Grimoire",
    "default_popup": "popup.html"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "grimoire@yourdomain.com"
    }
  }
}

